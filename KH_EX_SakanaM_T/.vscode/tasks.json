{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe 生成活动文件",
			"command": "E:\\MinGW\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"**.cpp",								// 匹配当前目录下所有的.cpp文件
				"-o",
				"${workspaceFolder}\\build\\run.exe", 	// 
				"-leasyx"								// 
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: E:\\MinGW\\bin\\g++.exe"
		}
	]
}